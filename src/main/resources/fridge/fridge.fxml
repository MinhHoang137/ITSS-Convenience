<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.fridge.FridgeController">
   <children>
      <HBox layoutX="12.0" prefHeight="38.0" prefWidth="556.0" spacing="10.0" AnchorPane.leftAnchor="12.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Thực phẩm trong tủ lạnh">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button fx:id="expireCheck" cache="true" mnemonicParsing="false" onAction="#getexpiredIngre" prefHeight="25.0" prefWidth="127.0" text="thực phẩm hết hạn">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button fx:id="goBack" mnemonicParsing="false" onAction="#goBack" text="Quay lại" />
         </children>
         <padding>
            <Insets right="10.0" top="10.0" />
         </padding>
      </HBox>
      <ScrollPane layoutX="12.0" layoutY="68.0" prefHeight="322.0" prefWidth="486.0">
         <content>
            <VBox prefHeight="283.0" prefWidth="456.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10">
                     <TextField fx:id="searchField" promptText="Tìm nguyên liệu..." />
                     <Button onAction="#onSearch" text="Tìm" />
                  </HBox>
                  <TableView fx:id="tableView" prefHeight="282.0" prefWidth="456.0">
                    <columns>
                      <TableColumn fx:id="name" prefWidth="167.33332288265228" text="Tên" />
                      <TableColumn fx:id="quantity" prefWidth="116.66665649414062" text="Số lượng" />
                        <TableColumn fx:id="unit" prefWidth="171.33331298828125" text="Đơn vị" />
                    </columns>
                  </TableView>
               </children></VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
