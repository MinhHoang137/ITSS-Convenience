<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="430.0" prefWidth="873.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.meal.AddMealView">
   <children>
      <!-- ScrollPane cho món đã thêm -->
      <ScrollPane fitToWidth="true" layoutX="20.0" layoutY="80.0" prefHeight="292.0" prefWidth="454.0" style="-fx-background: #f5f5f5;">
         <content>
            <VBox fx:id="addedContainer" prefHeight="286.0" prefWidth="444.0" spacing="5" style="-fx-padding: 10;" />
         </content>
      </ScrollPane>

      <!-- ScrollPane cho món tìm thấy -->
      <ScrollPane fitToWidth="true" layoutX="495.0" layoutY="80.0" prefHeight="292.0" prefWidth="324.0" style="-fx-background: #f5f5f5;">
         <content>
            <VBox fx:id="foundContainer" prefHeight="290.0" prefWidth="330.0" spacing="5" style="-fx-padding: 10;" />
         </content>
      </ScrollPane>

      <!-- HBox nhập tên món -->
      <HBox alignment="CENTER_LEFT" layoutX="495.0" layoutY="30.0" prefHeight="31.0" prefWidth="194.0" spacing="10" style="-fx-padding: 0 0 0 5;">
         <children>
            <Label prefHeight="20.0" prefWidth="81.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Tên món:" />
            <TextField fx:id="dishName" prefHeight="26.0" prefWidth="123.0" promptText="Nhập tên món" />
         </children>
      </HBox>

      <!-- HBox chọn bữa ăn -->
      <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="21.0" prefHeight="50.0" prefWidth="226.0" spacing="10" style="-fx-padding: 0 0 0 5;">
         <children>
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Bữa ăn:" />
            <ComboBox fx:id="eatTImeBox" onAction="#OnEatTimeChange" prefWidth="150.0" promptText="Chọn bữa ăn" />
         </children>
      </HBox>

      <!-- HBox chọn ngày ăn -->
      <HBox alignment="CENTER_LEFT" layoutX="246.0" layoutY="21.0" prefHeight="50.0" prefWidth="226.0" spacing="10" style="-fx-padding: 0 0 0 5;">
         <children>
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Ngày ăn:" />
            <ComboBox fx:id="eatDateBox" onAction="#OnEatDateChange" prefWidth="150.0" promptText="Chọn ngày ăn" />
         </children>
      </HBox>

      <!-- Nút thêm -->
      <Button layoutX="20.0" layoutY="378.0" mnemonicParsing="false" onAction="#OnAddMeal" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Thêm">
      </Button>
      <Button layoutX="698.0" layoutY="28.0" mnemonicParsing="false" onAction="#OnSearchByName" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Tìm" />
      <Button layoutX="762.0" layoutY="28.0" mnemonicParsing="false" onAction="#onSearchAll" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Tất cả" />
      <ScrollPane layoutX="492.0" layoutY="385.0" prefHeight="200.0" prefWidth="324.0">
         <content>
            <VBox prefHeight="200.0" prefWidth="308.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <HBox prefHeight="43.0" prefWidth="287.0">
                     <children>
                        <Label text="Tên món: ">
                           <HBox.margin>
                              <Insets bottom="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="dishNameText">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Label fx:id="instructionText">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="ingredientList" prefHeight="200.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </ListView>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
