<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.shopping.BuyIngredientController">
    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">
        <Label text="🛒 Nguyên liệu trong danh sách" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Form thêm nguyên liệu (chỉ HOUSEWIFE thấy) -->
        <VBox fx:id="sectionAdd" spacing="10" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Tên:"/>
                <TextField fx:id="txtIngredientName" promptText="VD: Cà rốt"/>

                <Label text="Số lượng:"/>
                <TextField fx:id="txtQuantity" promptText="VD: 2.5"/>

                <Label text="Đơn vị:"/>
                <TextField fx:id="txtUnit" promptText="VD: kg"/>

                <Button text="➕ Thêm" onAction="#handleAddIngredient"/>
            </HBox>
        </VBox>

        <!-- Bảng nguyên liệu -->
        <TableView fx:id="tableIngredient" prefHeight="250">
            <columns>
                <TableColumn fx:id="colName" text="Nguyên liệu" prefWidth="200"/>
                <TableColumn fx:id="colQty" text="Số lượng" prefWidth="150"/>
                <TableColumn fx:id="colUnit" text="Đơn vị" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Nút chuyển và quay lại -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="📦 Chuyển đã chọn sang tủ lạnh" onAction="#handleTransferToFridge"/>
            <Button fx:id="btnDeleteIngredient" text="🗑️ Xóa nguyên liệu đã chọn" onAction="#handleDeleteIngredient"/>
            <Button text="🔙 Quay lại" onAction="#handleBack"/>
        </HBox>
    </VBox>
</AnchorPane>
