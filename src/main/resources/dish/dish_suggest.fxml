<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.dish.DishSuggestController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" left="10" bottom="0" right="10"/>
            </padding>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="🍱 GỢI Ý MÓN ĂN" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>

            <!-- Chỉ giữ nút Nấu ăn -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button fx:id="btnCook" text="🔥 Nấu ăn" />
            </HBox>

            <!-- Dishes List -->
            <VBox spacing="5" alignment="TOP_LEFT">
                <Label text="🥘 Món có thể nấu:" style="-fx-font-weight: bold;" />
                <ListView fx:id="lvDishes" prefHeight="150"/>
            </VBox>

            <!-- Ingredients List -->
            <VBox spacing="5" alignment="TOP_LEFT">
                <Label text="📦 Nguyên liệu hiện có:" style="-fx-font-weight: bold;" />
                <ListView fx:id="lvIngredients" prefHeight="150"/>
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnBack" text="⬅ Quay lại"/>
        </HBox>
    </bottom>
</BorderPane>
