<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.meal.DishDetailView"
            prefWidth="600.0" prefHeight="400.0">

    <VBox spacing="10" layoutX="20" layoutY="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <Label text="Thông tin món ăn" />

        <HBox spacing="10">
            <Label text="Tên món:" />
            <Label fx:id="nameLabel" />
        </HBox>

        <HBox spacing="10">
            <Label text="Mô tả:" />
            <Label fx:id="descriptionLabel" />
        </HBox>

        <HBox spacing="10">
            <Label text="Thời gian ăn:" />
            <Label fx:id="eatTimeLabel" />
        </HBox>

        <HBox spacing="10">
            <Label text="Ngày ăn:" />
            <Label fx:id="eatDateLabel" />
        </HBox>

        <Label text="Danh sách nguyên liệu:" />
        <ListView fx:id="ingredientList" prefHeight="200" />

    </VBox>
</AnchorPane>
